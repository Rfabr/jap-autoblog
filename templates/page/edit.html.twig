{% extends 'base.html.twig' %}

{% block title %}Jap' AutoBlog | Edit{% endblock %}

{% block content %}
    <div class="container">
        <div class="starter-template" style="padding-top: 25px">
            <h1>Edit</h1>
            <p>Edit an article.</p>
        </div>

        <form method="POST">
            {% block form %}
                <div class="form-group row">
                    <label for="title" class="col-sm-2 col-form-label">Title :</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" name="title" value="{{ article.title }}">
                    </div>
                </div>
                <div class="form-group row" style="margin-top: 25px">
                    <label for="description" class="col-sm-2 col-form-label">Description :</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="description" name="description" value="{{ article.description }}">
                    </div>
                </div>
                <div class="form-group row" style="margin-top: 25px">
                    <label for="contents" class="col-sm-2 col-form-label">Contents :</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="contents" name="contents">{{ article.contents }}</textarea>
                    </div>
                </div>
                <div class="form-group row" style="margin-top: 25px">
                    <label for="picture" class="col-sm-2 col-form-label">Picture :</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="picture" name="picture">{{ article.picture }}</textarea>
                    </div>
                </div>
                <div class="form-group row" style="margin-top: 25px">
                    <label for="brand" class="col-sm-2 col-form-label">Brand :</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="brand" name="brand" value="{{ article.brand }}">
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark col-sm-6" style="margin-top: 25px">Edit</button>
                </div>
            {% endblock %}
        </form>
    </div>
{% endblock %}