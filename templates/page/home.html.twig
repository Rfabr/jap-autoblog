{% extends 'base.html.twig' %}

{% block title %}Jap' AutoBlog | Homepage{% endblock %}

{% block content %}
    <div class="container">
        <div class="starter-template" style="padding-top: 25px">
            <h1>Homepage</h1>
            <p>Check out our latest articles.</p>
        </div>

        <div class="d-flex justify-content-around row g-0">
            {% block homecard %}
            {% for article in articles %}
                <div class="card" style="width: 19rem; margin-top: 17px;">
                    <img src="{{ article.picture() }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">{{ article.title() }}</h4>
                        <p class="card-text">{{ article.description() }}</p>
                        <p class="card-text">{{ article.brand() }}</p>
                        <a href="{{ path('app_page_article', {id:article.id}) }}" class="btn btn-dark">See</a>
                    </div>
                </div>
            {% endfor %}
            {% endblock %}
        </div>
    </div>
{% endblock %}