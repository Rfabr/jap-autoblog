{% extends 'base.html.twig' %}

{% block title %}Jap' AutoBlog | Search{% endblock %}

{% block content %}
    <div class="container">
        <div class="starter-template" style="padding-top: 25px">
            <h1>Search</h1>
            <p>Search an article.</p>
        </div>

        <form>
            {% block form %}
                <div class="form-group row">
                    <label for="brand" class="col-sm-2 col-form-label">Search by brand :</label>
                    <div class="col-sm-10">
                        <input type="search" class="form-control" id="brand" name="brand" value"{{ app.request.query.get('name') }}">
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-dark col-sm-6" style="margin-top: 25px">Search</button>
                </div>
            {% endblock %}
        </form>
        
        <div class="d-flex justify-content-around row g-0">
            {% block homecard %}
            {% for article in articles %}
                <div class="card" style="width: 19rem; margin-top: 17px;">
                    <img src="{{ article.picture() }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">{{ article.title() }}</h4>
                        <p class="card-text">{{ article.description() }}</p>
                        <p class="card-text">{{ article.brand() }}</p>
                        <a href="{{ path('app_page_article', {id:article.id}) }}" class="btn btn-dark">See</a>
                    </div>
                </div>
            {% endfor %}
            {% endblock %}
        </div>
    </div>
{% endblock %}